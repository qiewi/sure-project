// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String  @id @default(cuid())
  email          String  @unique
  name           String
  role           String?
  hashedPassword String?
  picture        String?

  session Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id])
}

model Major {
  index        Int    @id @default(autoincrement())
  id           Int    @map("id_major") @unique
  universityId Int?   @map("id_university") 
  type         String
  name         String @map("major_name")
  capacity     Int?

  @@map("majors")
}

model University {
  index Int    @id @default(autoincrement())
  id    Int    @map("id_university") @unique
  name  String @map("university_name")

  @@map("universities")
}

model ScoreScience {
  index             Int @id @default(autoincrement())
  MajorId     Int? @map("id_major")
  UniversityId Int? @map("id_university")
  score          Float?

  @@map("scores_science")
}

model ScoreHumanities {
  index             Int @id @default(autoincrement())
  MajorId     Int? @map("id_major")
  UniversityId Int? @map("id_university")
  score          Float?

  @@map("scores_humanities")
}




